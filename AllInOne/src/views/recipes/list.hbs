<div class="container p-4">
	<div class="row">

		{{#each recipes}}

			<div class="col-md-4">
				<div class="card text-center">
					<div class="card-body">

						<a href="/recipes/steps/{{id}}"class="card-title text-uppercase"> 
							{{title}}  <!--renderiza titulo del link-->
						</a> 			

						<p class="m-2">
							{{description}} <!--mostrar descripcion-->
						</p>						
							
						</p>	
							{{timeago created_at}}
						</p>
		
						<a href="/recipes/delete/{{id}}" class="btn btn-danger"> Delete</a>
						<a href="/recipes/edit/{{id}}" class="btn btn-secondary"> Edit</a>
					</div>
				</div>
			</div>

			{{else}}
				<div class="col-md-4 mx-auto">
					<div class="card card-body text-center">
						<p> No hay recipes creados </p>
						<a href="/recipes/add"> Agrega un nuevo recipe </a>
					</div>					
				</div>
		{{/each}}
	</div>	
</div>