<div class="container p-4 m-2">
	<div class="row">
		<div class="col-md-5 m-2">
			<div class="card text-center">
				<div class="card-body">
					<h5 class="m-2"> INGREDIENTES</h5>
					{{#each recipeComplete}}	
						<div class="container">
							<div class="row">
								<div class="col-md-4">
									<p>	{{Amount}}</p>
								</div>
								<div class="col-md-4">
									<p>	{{Measure}}</p>
								</div>
								<div class="col-md-4">
									<p>	{{Ingredient}}</p>
								</div>
								
							</div>									
						</div>					
																		
					{{/each}}
				</div>
			</div>
		</div>

		<div class="col-md-6 m-2">
			<div class="card text-center">
				<div class="card-body">
	
					{{#each recipes}}	
						<h5>{{title}}</h5>
						<h5 class="m-2"> PREPARACION</h5>
						<p>
							{{steps}} 	
						</p>
						
					{{/each}}
				</div>
			</div>
		</div>


	</div>	

</div>